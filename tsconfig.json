{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "sourceMap": true,
      "lib": ["es6", "DOM"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "sourceRoot": "lib"
  },
  "exclude": [
      "dist",
      "examples",
      "node_modules",
      "./test",
      ".vscode",
      ".vs",
      ".git"
  ]
}
